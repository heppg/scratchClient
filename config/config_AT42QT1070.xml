		<parameter name='poll.interval' value='0.05' />
		<parameter name='value.inverse' value='false' />
	</adapter>

	<adapter class='adapter.gpio.GpioEventInput' name='button_s3'>
		<description>Output 3 of the breakout board</description>
		<gpio port='GPIO24'>
